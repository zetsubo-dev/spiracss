---
// Card list component
interface Props {
  class?: string
  id?: string
}

interface Card {
  title: string
  description: string
  variant?: string
  state?: string
  ariaSelected?: string
}

const { class: className, id } = Astro.props

const cards: Card[] = [
  {
    title: 'Data Variants',
    description: 'Express design intent with data-variant in data mode.',
    variant: 'primary'
  },
  {
    title: 'State Separation',
    description: 'Keep data-state and aria states inside interaction sections.',
    state: 'active'
  },
  {
    title: 'Page Layer',
    description: 'Wire blocks in page SCSS with explicit @rel comments.',
    ariaSelected: 'true'
  }
]
---

<section
  id={id}
  class:list={['card-list', className]}
  data-variant="highlight"
>
  <h2 class="title">Features</h2>
  <ul class="list-items">
    {
      cards.map((card) => (
        <li
          class="card-item"
          data-variant={card.variant}
          data-state={card.state}
          aria-selected={card.ariaSelected}
        >
          <h3 class="title">{card.title}</h3>
          <p class="description">{card.description}</p>
        </li>
      ))
    }
  </ul>
</section>
